{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start PI server",
            "type": "shell",
            "command": "python3 ./pi-server-source.py",
            "windows": {
                "command": "python pi-server-source.py"
            },
            "options": {
                "cwd": "${workspaceFolder}/SkillBossLogistics"
            },
            "problemMatcher": []
        },
        {
            "label": "Start website",
            "type": "shell",
            "command": "py manage.py runserver",
            "options": {
                "cwd": "${workspaceFolder}/website"
            },
            "problemMatcher": []
        },
        {
            "label": "Run together",
            "type": "shell",
            "command": "dir website",
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "Start PI server",
                "Start website"
            ],
            "dependsOrder": "parallel"
        }
    ]
}